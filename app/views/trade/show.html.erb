<h1>Предложения об обмене</h1>
<% if current_user %>
    
    <table>
        <tr>
            <th>Ваша вещь</th>
            <th>&nbsp;Вешь для обмена</th>
            <th></th>
			<th></th>
        </tr>
		<% @trade.each do |trade| %>
        <tr>
            <td><%= Thing.find(trade.thing_id).name %></td>
            <td><%= Thing.find(trade.thing2_id).name %></td>
            <td><%= link_to "Принять", trade_accept_path(id: trade.id) %></td>
			<td><%= link_to "Отклонить", trade_reject_path(id: trade.id) %></td>
        </tr>
        <% end %>
    </table>
<br>
	<p><%= link_to "Назад ", root_path%></p>
     <p>email:&nbsp;<%= current_user.email %>&nbsp;<%= link_to "выйти", destroy_user_session_url, method: :delete %></p>
    
<% else %>
    <p><%= link_to "Регистрация", new_user_registration_path %> или <%= link_to "Вход", new_user_session_path %></p>
<% end %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
