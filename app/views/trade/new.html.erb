<h1>Инвентарь</h1>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<% if current_user %>
    
    <table>
        <tr>
            <th>Название</th>
            <th>Категория</th>
            <th></th>
        </tr>
		<% @things.each do |thing| %>
        <tr>
            <td><%= thing.name %></td>
            <td><%= thing.category %></td>
            <td><%= link_to "Обменять", trade_create_path(user_id:@user1_id, user2_id:thing.user_id, thing_id:@thing1_id, thing2_id:thing.id) %></td>
        </tr>
        <% end %>

    </table>
	<p><%= link_to "Назад ", all_things_path %></p>

<p>email:&nbsp;<%= current_user.email %>&nbsp;<%= link_to "выйти", destroy_user_session_url, method: :delete %></p>
    
<% else %>
    <p><%= link_to "Регистрация", new_user_registration_path %> или <%= link_to "Вход", new_user_session_path %></p>
<% end %>
